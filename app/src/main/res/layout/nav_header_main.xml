<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_vertical_margin"
    android:paddingLeft="@dimen/nav_horizontal_margin"
    android:paddingRight="@dimen/nav_horizontal_margin"
    android:paddingTop="@dimen/nav_vertical_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/banner"
        android:contentDescription="@string/acb_ws_logo" />
</LinearLayout>
