<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_cat_common">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_hide_normal"
            android:summary="@string/pref_hide_normal_summary"
            android:title="@string/pref_hide_normal_title" />
        <EditTextPreference
            android:defaultValue="@string/default_show_limit"
            android:inputType="number"
            android:key="@string/pref_show_limit"
            android:summary="@string/pref_show_limit_summary"
            android:title="@string/pref_show_limit_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_cat_deck_edit">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_auto_save"
            android:summary="@string/pref_auto_save_summary"
            android:title="@string/pref_auto_save_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_auto_close"
            android:summary="@string/pref_auto_close_summary"
            android:title="@string/pref_auto_close_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_cat_misc">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_pop_back"
            android:summary="@string/pref_pop_back_summary"
            android:title="@string/pref_pop_back_title" />
    </PreferenceCategory>
</PreferenceScreen>